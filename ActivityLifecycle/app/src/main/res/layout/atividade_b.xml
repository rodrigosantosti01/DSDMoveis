<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AtividadeB"
    android:background="#2db300"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tituloB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="ATIVIDADE B"
        android:textColor="#fff"
        android:textSize="40dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_BA"
            android:layout_width="0dp"
            android:layout_weight="3.1"
            android:layout_height="wrap_content"
            android:onClick="iniciarAtividade_BA"
            android:text="@string/btnA" />

        <Button
            android:id="@+id/button_BC"
            android:layout_width="0dp"
            android:layout_weight="3.1"
            android:layout_height="wrap_content"
            android:onClick="iniciarAtividade_BC"
            android:text="@string/btnC" />

        <Button
            android:id="@+id/button_B"
            android:layout_width="0dp"
            android:layout_weight="3.9"
            android:layout_height="wrap_content"
            android:onClick="terminarAtividadeB"
            android:text="TERMINAR B" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_weight="3.0"
            android:layout_height="wrap_content"
            android:onClick="dialogo"
            android:text="@string/dialogo" />
    </LinearLayout>

    <TextView
        android:id="@+id/subtituloB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/lista"
        android:textColor="#fff"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/atividadeB"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="#fff"
        android:gravity="left"
        android:focusable="false"/>

    <TextView
        android:id="@+id/subtituloStatusB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/status"
        android:textColor="#fff"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/statusAtividadeB"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="#fff"
        android:gravity="left"
        android:focusable="false"/>

</LinearLayout>