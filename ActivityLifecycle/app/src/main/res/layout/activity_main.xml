<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1a8cff"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tituloA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:text="ATIVIDADE A"
        android:textColor="#fff"
        android:textSize="40dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/button_AB"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:onClick="iniciarAtividade_AB"
            android:text="@string/btnB" />

        <Button
            android:id="@+id/button_AC"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:onClick="iniciarAtividade_AC"
            android:text="@string/btnC" />

        <Button
            android:id="@+id/buttonA"
            android:layout_width="0dp"
            android:layout_weight="4.1"
            android:layout_height="wrap_content"
            android:onClick="terminarAtividadeA"
            android:text="TERMINAR A" />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_weight="2.9"
            android:layout_height="wrap_content"
            android:onClick="dialogo"
            android:text="@string/dialogo" />
    </LinearLayout>

    <TextView
        android:id="@+id/subtituloA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/lista"
        android:textColor="#fff"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/atividadeA"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="#fff"
        android:gravity="left"/>

    <TextView
        android:id="@+id/subtituloStatusA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/status"
        android:textColor="#fff"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/statusAtividadeA"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:background="#fff"
        android:gravity="left"/>


</LinearLayout>